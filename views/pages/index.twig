{% extends "layouts.master" %}

{% block content %}
    {# Hero Section #}
    <section class="bg-primary text-white py-16">
        <div class="container mx-auto px-4">
            <div class="max-w-3xl mx-auto text-center">
                <h1 class="text-4xl font-bold mb-4">{{ store.name }}</h1>
                <p class="text-xl mb-8">{{ store.description }}</p>
                <a href="{{ link('products') }}" class="btn bg-white text-primary hover:bg-gray-100">
                    {{ trans('common.shop_now') }}
                </a>
            </div>
        </div>
    </section>

    {# Featured Products #}
    <section class="py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-2xl font-bold mb-8">{{ trans('common.featured_products') }}</h2>
            {% component 'home.featured-products' with {
                'products': featured_products,
                'limit': 8
            } %}
        </div>
    </section>

    {# Categories Grid #}
    <section class="bg-gray-50 py-16">
        <div class="container mx-auto px-4">
            <h2 class="text-2xl font-bold mb-8">{{ trans('common.categories') }}</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
                {% for category in categories %}
                    <a href="{{ category.url }}" class="group">
                        <div class="relative aspect-square overflow-hidden rounded-lg">
                            <img src="{{ category.image }}" alt="{{ category.name }}" 
                                 class="w-full h-full object-cover transition-transform group-hover:scale-105">
                            <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
                                <h3 class="text-white text-xl font-bold">{{ category.name }}</h3>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </section>

    {# Features #}
    <section class="py-16">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {# Free Shipping #}
                <div class="text-center">
                    <i class="sicon-shipping-fast text-4xl text-primary mb-4"></i>
                    <h3 class="font-bold mb-2">{{ trans('common.free_shipping') }}</h3>
                    <p class="text-gray-600">{{ trans('common.free_shipping_desc') }}</p>
                </div>

                {# Secure Payment #}
                <div class="text-center">
                    <i class="sicon-shield-check text-4xl text-primary mb-4"></i>
                    <h3 class="font-bold mb-2">{{ trans('common.secure_payment') }}</h3>
                    <p class="text-gray-600">{{ trans('common.secure_payment_desc') }}</p>
                </div>

                {# Support #}
                <div class="text-center">
                    <i class="sicon-chat text-4xl text-primary mb-4"></i>
                    <h3 class="font-bold mb-2">{{ trans('common.support') }}</h3>
                    <p class="text-gray-600">{{ trans('common.support_desc') }}</p>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
