<!DOCTYPE html>
<html lang="{{ locale }}" dir="{{ direction }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ store.name }}</title>
    {{ salla.head }}
</head>
<body>
    <header class="s-header">
        <div class="container">
            <nav class="s-navigation">
                {{ component('header.menu') }}
            </nav>
        </div>
    </header>

    <main class="s-main">
        {{ component('home.slider') }}
        
        <section class="featured-products">
            <div class="container">
                <h2>{{ trans('common.featured_products') }}</h2>
                {{ component('product.featured') }}
            </div>
        </section>
    </main>

    <footer class="s-footer">
        <div class="container">
            {{ component('footer.links') }}
        </div>
    </footer>

    {{ salla.footer }}
</body>
</html>
