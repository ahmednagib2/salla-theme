{% set menu_items = store.menu_items|default([]) %}

<nav class="main-menu">
    <ul class="flex space-x-6">
        {% for item in menu_items %}
            <li class="relative group">
                <a href="{{ item.url }}" class="text-gray-700 hover:text-primary py-2 flex items-center">
                    {{ item.name }}
                    {% if item.children|length > 0 %}
                        <i class="sicon-keyboard_arrow_down ml-1"></i>
                    {% endif %}
                </a>

                {% if item.children|length > 0 %}
                    <div class="absolute top-full left-0 mt-2 w-48 bg-white shadow-lg rounded-lg py-2 hidden group-hover:block">
                        {% for child in item.children %}
                            <a href="{{ child.url }}" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">
                                {{ child.name }}
                            </a>
                        {% endfor %}
                    </div>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
</nav>
