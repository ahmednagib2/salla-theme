{% set brands = store.brands|default([]) %}

<div class="py-8">
    <div class="container mx-auto px-4">
        <h2 class="text-2xl font-bold mb-8 text-center">{{ trans('common.our_brands') }}</h2>
        <div class="grid grid-cols-2 md:grid-cols-6 gap-4">
            {% for brand in brands %}
                <a href="{{ brand.url }}" class="group">
                    <div class="bg-white rounded-lg shadow-sm p-4 transition duration-300 hover:shadow-md">
                        <img src="{{ brand.logo }}" alt="{{ brand.name }}" class="w-full h-24 object-contain">
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</div>
