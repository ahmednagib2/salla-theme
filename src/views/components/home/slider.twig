{% set slides = component.slides|default([]) %}

<div class="relative">
    {% if slides|length > 0 %}
        <div class="swiper main-slider">
            <div class="swiper-wrapper">
                {% for slide in slides %}
                    <div class="swiper-slide relative">
                        <img src="{{ slide.image }}" alt="{{ slide.title }}" class="w-full h-[400px] object-cover">
                        <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
                            <div class="text-center text-white">
                                {% if slide.title %}
                                    <h2 class="text-4xl font-bold mb-4">{{ slide.title }}</h2>
                                {% endif %}
                                {% if slide.sub_title %}
                                    <p class="text-xl mb-6">{{ slide.sub_title }}</p>
                                {% endif %}
                                {% if slide.button_text and slide.button_link %}
                                    <a href="{{ slide.button_link }}" class="inline-block bg-primary hover:bg-primary-dark text-white font-bold py-3 px-8 rounded-lg transition duration-300">
                                        {{ slide.button_text }}
                                    </a>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="swiper-pagination"></div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    {% endif %}
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        new Swiper('.main-slider', {
            loop: true,
            autoplay: {
                delay: 5000,
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    });
</script>
