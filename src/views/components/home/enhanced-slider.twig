{% set slides = component.slides|default([]) %}

<div class="enhanced-slider relative overflow-hidden">
    {% if slides|length > 0 %}
        <div class="swiper enhanced-main-slider">
            <div class="swiper-wrapper">
                {% for slide in slides %}
                    <div class="swiper-slide relative h-[600px]">
                        <img src="{{ slide.image }}" alt="{{ slide.title }}" class="w-full h-full object-cover">
                        <div class="absolute inset-0 bg-gradient-to-r from-black/60 to-transparent flex items-center">
                            <div class="container mx-auto px-4">
                                <div class="max-w-xl text-white">
                                    {% if slide.title %}
                                        <h2 class="text-5xl font-bold mb-4 animate__animated animate__fadeInUp">
                                            {{ slide.title }}
                                        </h2>
                                    {% endif %}
                                    {% if slide.sub_title %}
                                        <p class="text-xl mb-8 animate__animated animate__fadeInUp animate__delay-1s">
                                            {{ slide.sub_title }}
                                        </p>
                                    {% endif %}
                                    {% if slide.button_text and slide.button_link %}
                                        <a href="{{ slide.button_link }}" 
                                           class="inline-block bg-primary hover:bg-primary-dark text-white font-bold py-4 px-8 rounded-lg transition duration-300 animate__animated animate__fadeInUp animate__delay-2s">
                                            {{ slide.button_text }}
                                        </a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="swiper-pagination"></div>
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    {% endif %}
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        new Swiper('.enhanced-main-slider', {
            loop: true,
            effect: 'fade',
            speed: 1000,
            autoplay: {
                delay: 5000,
                disableOnInteraction: false,
            },
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
        });
    });
</script>
